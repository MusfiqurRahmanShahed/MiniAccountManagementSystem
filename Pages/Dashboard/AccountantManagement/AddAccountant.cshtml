@page
@model AccountManagementSystem.Pages.Dashboard.AccountantManagement.AddAccountantModel
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@attribute [Authorize(Roles = "Admin,Accountant")]

<h2>➕ Add New Accountant</h2>

<form method="post">
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger" />
    </div>
    <div class="mb-3">
        <label>Password</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger" />
    </div>
    <button type="submit" class="btn btn-success">Add Accountant</button>
    <a asp-page="AccountantIndex" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
