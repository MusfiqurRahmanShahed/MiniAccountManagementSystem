@page
@model AccountManagementSystem.Pages.Dashboard.ViewerManagement.ViewerIndexModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin,Accountant,Viewer")]

@{
    ViewData["Title"] = "Viewer Management";
}

<h2>👁️ Viewer Management</h2>
<a class="btn btn-success mb-3" asp-page="AddViewer">+ Add New Viewer</a>
<table class="table table-bordered mt-4">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var viewer in Model.Viewers)
        {
            <tr>
                <td>@viewer.Email</td>
                <td>@viewer.UserName</td>
                <td>
                    <a asp-page="EditViewer" asp-route-id="@viewer.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@viewer.Id" onsubmit="return confirm('Are you sure you want to delete this viewer?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
