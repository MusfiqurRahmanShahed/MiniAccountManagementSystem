@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@model AccountManagementSystem.Pages.Dashboard.Voucher.VoucherDetailsModel
@attribute [Authorize(Roles = "Admin,Accountant")]
@{
    ViewData["Title"] = "Voucher Details";
}

<h2>🧾 Voucher Details (ID: @Model.Header.Id)</h2>

<p><strong>Date:</strong> @Model.Header.Date.ToString("yyyy-MM-dd")</p>
<p><strong>Reference No:</strong> @Model.Header.ReferenceNo</p>

<hr />

<h4>Voucher Lines</h4>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Account ID</th>
            <th>Debit</th>
            <th>Credit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Lines)
        {
            <tr>
                <td>@line.AccountId</td>
                <td>@line.Debit</td>
                <td>@line.Credit</td>
            </tr>
        }
    </tbody>
</table>
