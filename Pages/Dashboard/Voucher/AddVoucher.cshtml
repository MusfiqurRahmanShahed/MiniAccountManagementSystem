@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin,Accountant")]
@model AccountManagementSystem.Pages.Dashboard.VoucherManagement.AddVoucherModel
@{
    ViewData["Title"] = "Add Voucher";
}

<h2>Add Voucher</h2>

<form method="post">
    <div class="mb-3">
        <label>Date</label>
        <input asp-for="Voucher.Date" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label>Reference No</label>
        <input asp-for="Voucher.ReferenceNo" class="form-control" />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Account ID</th>
                <th>Debit</th>
                <th>Credit</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Voucher.Lines.Count; i++)
            {
                <tr>
                    <td><input asp-for="Voucher.Lines[@i].AccountId" class="form-control" /></td>
                    <td><input asp-for="Voucher.Lines[@i].Debit" class="form-control" /></td>
                    <td><input asp-for="Voucher.Lines[@i].Credit" class="form-control" /></td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Voucher</button>
</form>


