@page
@using Microsoft.AspNetCore.Authorization
@model AccountManagementSystem.Pages.Dashboard.Voucher.VoucherIndexModel
@attribute [Authorize(Roles = "Admin,Accountant")]
@{
    ViewData["Title"] = "Voucher List";
}

<h2>📋 List of Vouchers</h2>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Reference No</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voucher in Model.Vouchers)
        {
            <tr>
                <td>@voucher.Id</td>
                <td>@voucher.Date.ToString("yyyy-MM-dd")</td>
                <td>@voucher.ReferenceNo</td>
                <td>
                    <a asp-page="VoucherDetails" asp-route-id="@voucher.Id" class="btn btn-sm btn-primary">Details</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@voucher.Id" onsubmit="return confirm('Are you sure you want to delete this viewer?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="/Dashboard/Voucher/AddVoucher" class="btn btn-primary">
        🧾 Add Voucher
    </a>
</div>
