@page
@model AccountManagementSystem.Pages.ChartOfAccounts.IndexModel
@{
}
<h2 class="text-center mb-3">ListOfAccounts</h2>
<a class="btn-primary" asp-page="/ChartOfAccounts/Create">Create Account</a>

<table class="table">
	<thead>
		<tr>
			<th>AccountId</th>
			<th>AccountName</th>
			<th>Email</th>
			<th>PhoneNumber</th>
			<th>ParentId</th>
			<th>AccountStatus</th>
			<th>DateOfCreation</th>
			<th>CreatedBy</th>
			<th>Actions</th>

		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model.ChartOfAccounts)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Name</td>
			<td>@item.Email</td>
			<td>@item.PhoneNumber</td>
			<td>@item.ParentId</td>
			<td>@item.IsActive</td>
			<td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
			<td>@item.CreatedBy</td>
			<td>
				<a class="btn btn-primary" asp-page="/ChartOfAccounts/Edit" asp-route-id="@item.Id">Edit</a>
				<a class="btn btn-danger" asp-page="/ChartOfAccounts/Delete" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
		}
	</tbody>
</table>