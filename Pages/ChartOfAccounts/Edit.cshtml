@page
@model AccountManagementSystem.Pages.ChartOfAccounts.EditModel

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Edit Account</h2>

    @if (!string.IsNullOrEmpty(Model.successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <strong>@Model.successMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="needs-validation" novalidate>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white fw-semibold">
                        Account Details
                    </div>
                    <div class="card-body">

                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label">Account ID</label>
                            <div class="col-sm-8">
                                <input class="form-control-plaintext" readonly value="@Model.AccountView.Id" />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label">Account Name</label>
                            <div class="col-sm-8">
                                <input asp-for="accountDto.Name" class="form-control" />
                                <span asp-validation-for="accountDto.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <input asp-for="accountDto.Email" class="form-control" />
                                <span asp-validation-for="accountDto.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label">Phone Number</label>
                            <div class="col-sm-8">
                                <input asp-for="accountDto.PhoneNumber" class="form-control" />
                                <span asp-validation-for="accountDto.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label">Parent Account</label>
                            <div class="col-sm-8">
                                <input asp-for="accountDto.ParentId" class="form-control" />
                                <span asp-validation-for="accountDto.ParentId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label">Account Status</label>
                            <div class="col-sm-8">
                                <select asp-for="accountDto.IsActive" class="form-select">
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                                <span asp-validation-for="accountDto.IsActive" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label">Created By</label>
                            <div class="col-sm-8">
                                <input asp-for="accountDto.CreatedBy" class="form-control" />
                                <span asp-validation-for="accountDto.CreatedBy" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-save"></i> Update
                        </button>
                        <a class="btn btn-outline-secondary" asp-page="/ChartOfAccounts/Index">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
